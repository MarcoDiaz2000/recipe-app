<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>New Recipe</h2>
      <%= form_with(model: @recipe, local: true, html: { class: 'form-group' }) do |f| %>
        
        <div class="mb-3">
          <%= f.label :name, "Name", class: 'form-label' %>
          <%= f.text_field :name, placeholder: "Recipe name", class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.label :preparation_time, "Preparation time", class: 'form-label' %>
          <%= f.text_field :preparation_time, placeholder: "10", class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.label :cooking_time, "Cooking time", class: 'form-label' %>
          <%= f.text_field :cooking_time, placeholder: "20", class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.label :description, "Description", class: 'form-label' %>
          <%= f.text_field :description, placeholder: "Recipe description", class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.submit "Submit", class: 'btn btn-primary' %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
