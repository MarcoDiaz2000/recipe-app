<div class="recipe-form-container">
  <h2>New Recipe</h2>
  <%= form_with(model: @recipe, html: { class: 'recipe-form' }) do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, placeholder: "Recipe name" %>
    </div>
    <div class="form-group">
      <%= f.label :preparation_time, "Preparation time" %>
      <%= f.text_field :preparation_time, placeholder: "10" %>
    </div>
    <div class="form-group">
      <%= f.label :cooking_time, "Cooking time" %>
      <%= f.text_field :cooking_time, placeholder: "20" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_field :description, placeholder: "Recipe description" %>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
