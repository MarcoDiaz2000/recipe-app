<div class="text-center mt-4 mb-4">
  <%= link_to 'Add Food', new_food_path, class: 'btn btn-primary' %>
</div>
<table class="table table-bordered table-striped" style="width: 500px; margin: auto;">
  <thead class="thead-dark">
    <tr>
      <th>Food</th>
      <th>Measurement unit</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td><%= link_to 'Delete', food_path(food), data: { turbo_method: :delete }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
